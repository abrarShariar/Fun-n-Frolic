<section class="main clearfix">

    <section id="newCover" class="top" style="background-size: 1300px 450px;background: url('<%- item.cover_detail || theme.default_cover_detail %>');background-postition: top;">
        <div class="wrapper content_header clearfix">
            <h1 class="title"><%- item.title || theme.default_post_title || "Untitled" %></h1>
        </div>
    </section><!-- end top -->

    <section class="wrapper">
        <div class="content">

            <!-- Gallery -->
            <% if (item.photos && item.photos.length){ %>
                <%- partial('gallery') %>
            <% } %>

            <!-- Content -->
            <%- item.content %>

            <!-- Comments -->
            <div>
                <%- partial("_partial/comments.ejs") %>
            </div>
        </div><!-- end content -->
    </section>
</section><!-- end main -->
